@{
    ViewData["Title"] = "Home Page";
}

<div class="row home-carousel-row">
    <div class="col-sm-1 col-md-1"> </div>
    
    <div id="home-carousel" 
         class="carousel slide col-xs-12 col-sm-10 col-md-10" 
         data-ride="carousel">
        @* Slides *@
        <div class="carousel-inner">
            <div class="carousel-item home-carousel-item active">
                <img class="d-block home-carousel-img w-100"
                     src="~/img/Carousel/Clay/arid-barren-clay-1710813-narrow.jpg" alt="First Slide" />
            </div>
            <div class="carousel-item home-carousel-item">
                <img class="d-block home-carousel-img w-100"
                     src="~/img/Carousel/Clay/artisan-artist-clay-1675993-narrow.jpg" alt="Second Slide" />
            </div>
            <div class="carousel-item home-carousel-item">
                <img class="d-block home-carousel-img w-100"
                     src="~/img/Carousel/Clay/antique-art-arts-and-crafts-905844-narrow.jpg" alt="Third slide" />
            </div>
        </div>

        @* Left and Right Controls *@
        <a href="#home-carousel" class="carousel-control-prev" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Prev</span>
        </a>

        <a href="#home-carousel" class="carousel-control-next" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
    <div class="col-sm-1 col-md-1"> </div>
</div>
<div class="home-shopping-list">
    @* Shopping list of items *@
    @* @await Html.PartialAsync("_PartialName", customeViewDataModel) *@
</div>
